<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp">
    <RelativeLayout
        android:id="@+id/operation_rl"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/device_name_tv"
            android:text="device name"
            android:textSize="20dp"
            android:textColor="@android:color/black"/>
        <ImageView
            android:id="@+id/expand_iv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/operations_expand_selector"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="300dp">
        <LinearLayout
            android:id="@+id/operations_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/op_open_flash"
                android:textColor="@android:color/holo_blue_dark"
                android:text="打开手电筒"
                android:textSize="30dp"
                android:background="@color/grey"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/op_close_flash"
                android:textColor="@android:color/holo_blue_dark"
                android:text="关闭手电筒"
                android:textSize="30dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/op_open_music"
                android:textColor="@android:color/holo_blue_dark"
                android:text="打开豆瓣FM"
                android:textSize="30dp"
                android:background="@color/grey"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/op_close_music"
                android:textColor="@android:color/holo_blue_dark"
                android:text="关闭豆瓣FM"
                android:textSize="30dp"/>
            <RelativeLayout
                android:id="@+id/op_say"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/grey">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_say"
                    android:textColor="@android:color/holo_blue_dark"
                    android:text="大声说"
                    android:textSize="30dp" />
                <EditText
                    android:id="@+id/et_say"
                    android:layout_toRightOf="@+id/tv_say"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:focusedByDefault="false"/>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/op_volume_max"
                android:textColor="@android:color/holo_blue_dark"
                android:text="音量最大"
                android:textSize="30dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/op_volume_min"
                android:textColor="@android:color/holo_blue_dark"
                android:text="音量最小"
                android:textSize="30dp"
                android:background="@color/grey"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/op_start_location"
                android:textColor="@android:color/holo_blue_dark"
                android:text="开始监测位置"
                android:textSize="30dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/op_stop_location"
                android:textColor="@android:color/holo_blue_dark"
                android:text="停止监测位置"
                android:textSize="30dp"
                android:background="@color/grey"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>